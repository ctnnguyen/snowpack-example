{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "target": "es2015",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "app-constants": ["src/app-constants"],
      "assets/*": ["assets/*"],
      "components/*": ["src/components/*"],
      "config/*": ["src/config/*"],
      "generated/*": ["generated/*"],
      "graphql-local/*": ["src/graphql/*"],
      "pages/*": ["src/pages/*"],
      "test/*": ["src/test/*"],
      "theme": ["src/theme"],
      "utils/*": ["src/utils/*"],
      "*": ["*"]
    },
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "es2016.array.include",
      "es2017.object",
      "esnext.asynciterable"
    ],
    "skipLibCheck": true,
    "types": ["cypress", "jest", "node", "react" ]
  },
  "exclude": [
    "./node_modules",
    ".fixtures",
    ".github",
    "assets",
    "build",
    "dist",
    "dist-dev",
    "dist-production",
    "dist-staging",
    "tests",
    "node_modules",
    "**/cypress/**/*",
    "**/generated/**/*",
    "**/test/utils/**/*"
  ],
}
